{% extends 'base.html.twig' %}

{% block title %}New Eleve
{% endblock %}

{% block body %}

	<h1>Create new Eleve</h1>

	{# Affichage de l'alerte de succès si le paramètre 'success' est défini et est vrai #}
	{% if success is defined and success %}
		<div class="alert alert-success" role="alert">
			Eleve insert successfully!
		</div>
	{% endif %}

	{# Affichage de l'alerte d'erreur si le paramètre 'error' est défini et est vrai #}
	{% if error is defined and error %}
		<div class="alert alert-danger" role="alert">
			{{ error  }}
		</div>
	{% endif %}


	<div
		class="container-scroller">
		<!-- partial:partials/_navbar.html -->

		{% include "dashboard/nav_&_sidebar_&_footer/_nav.html.twig" %}


		<!-- partial -->
		<div
			class="container-fluid page-body-wrapper">
			<!-- partial:partials/_sidebar.html -->

			{% include "dashboard/nav_&_sidebar_&_footer/_sidebar.html.twig" %}

			<!-- partial -->
			<div class="main-panel">
				<div class="content-wrapper">

					<div class="row">
						<div class="col-md-12 grid-margin">
							<div class="d-flex justify-content-between flex-wrap">
								<div class="d-flex align-items-end flex-wrap">
									<div class="mr-md-3 mr-xl-5">
										<h2>Bienvenue
											{{ nom_prenom_user }}</h2>
										<!-- <p class="mb-md-0">Your analytics dashboard template.</p> -->
									</div>
									<div class="d-flex">
										<i class="mdi mdi-account-multiple text-muted hover-cursor"></i>
										<!-- <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;</p> -->
										<p class="text-primary mb-0 hover-cursor">eleves</p>
									</div>
								</div>

							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-md-12 grid-margin stretch-card">
							<div class="card">


								<div
									class="card-body">
									{# Affichage de l'alerte de succès si le paramètre 'deleteSuccess' est défini et est vrai #}
									{% if deleteSuccess is defined and deleteSuccess %}
										<div class="alert alert-success" role="alert">
											deleted successfully!
										</div>
									{% endif %}

									{# Affichage de l'alerte d'erreur si le paramètre 'deleteError' est défini et est vrai #}
									{% if deleteError is defined and deleteError %}
										<div class="alert alert-danger" role="alert">
											Error deleting Eleve. Please try again.
										</div>
									{% endif %}

									<h4 class="card-title" _msttexthash="455338" _msthash="40">Formulaire de D'Enregistrement d'un eleve</h4>


									{{ include('eleve/_form.html.twig', {'button_label': 'Save'}) }}

									<br>
									<a href="{{ path('app_eleve_index') }}">
										<button type="button" class="btn btn-outline-secondary btn-fw " _msttexthash="154141" _msthash="43">Revenir à la Liste</button>
									</a>
									<br>
									<br>

								</div>
							</div>
						</div>


					</div>


					<!-- content-wrapper ends -->
					<!-- partial:partials/_footer.html -->

					{% include "dashboard/nav_&_sidebar_&_footer/_footer.html.twig" %}

					<!-- partial -->
				</div>
				<!-- main-panel ends -->
			</div>
			<!-- page-body-wrapper ends -->
		</div>
		<!-- container-scroller -->


	{% endblock %}
