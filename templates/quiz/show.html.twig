{% extends 'base.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block body %}

	<div
		class="container-scroller">
		<!-- partial:partials/_navbar.html -->

		{% include "dashboard/nav_&_sidebar_&_footer/_nav.html.twig" %}


		<!-- partial -->
		<div
			class="container-fluid page-body-wrapper">
			<!-- partial:partials/_sidebar.html -->

			{% include "dashboard/nav_&_sidebar_&_footer/_sidebar.html.twig" %}

			<!-- partial -->
			<div class="main-panel">
				<div class="content-wrapper">

					<div class="row">
						<div class="col-md-12 grid-margin">
							<div class="d-flex justify-content-between flex-wrap">
								<div class="d-flex align-items-end flex-wrap">
									<div class="mr-md-3 mr-xl-5">
										<h2>Bienvenue
											{{ nom_prenom_user }}</h2>
										<!-- <p class="mb-md-0">Your analytics dashboard template.</p> -->
									</div>
									<div class="d-flex">
										<i class="mdi mdi-account-circle text-muted hover-cursor"></i>
										<!-- <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Dashboard&nbsp;/&nbsp;</p> -->
										<p class="text-primary mb-0 hover-cursor">Administratreur</p>
									</div>
								</div>

							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-md-12 grid-margin stretch-card">
							<div class="card">

								<div
									class="card-body">
									{# Affichage de l'alerte de succès si le paramètre 'deleteSuccess' est défini et est vrai #}
									{% if deleteSuccess is defined and deleteSuccess %}
										<div class="alert alert-success" role="alert">
											Quiz deleted successfully!
										</div>
									{% endif %}

									{# Affichage de l'alerte d'erreur si le paramètre 'deleteError' est défini et est vrai #}
									{% if deleteError is defined and deleteError %}
										<div class="alert alert-danger" role="alert">
											Error deleting quiz. Please try again.
										</div>
									{% endif %}

									<h4 class="card-title">Informations :</h4>

									<div style="display: flex; justify-content: flex-end;">
										<a type="button" href="{{ path('app_quiz_new') }}" class="btn btn-outline-primary btn-fw">
											<b>Effectuer un nouvel enregistrement</b>
										</a>
									</div>
									<br>

									<div class="table-responsive">
										<table class="table table-striped">
											<tbody>

												<th>Id</th>
												<td>{{ quiz.id }}</td>
											</tbody>
										</tr>
										<tr>
											<th>Titre du quiz</th>
											<td>{{ quiz.libelle }}</td>
										</tr>
									</tbody>
								</table>

								<br>
								<div class="container">
									<div
										class="row d-flex justify-content-between">
										<!-- Premier bouton à gauche -->
										<div class="col-auto">
											<a href="{{ path('app_quiz_index') }}">
												<button type="button" class="btn btn-secondary">Revenir à la Liste</button>
											</a>
										</div>

										<!-- Deuxième bouton à droite -->
										<div class="col-auto">
											<a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">
												<button type="button" class="btn btn-primary">Modifier</button>
											</a>
										</div>
									</div>
								</div>


							</div>
						</div>

						<div style="text-align: center; justify-content:center">
							{{ include('quiz/_delete_form.html.twig') }}
							<br>
						</div>
					</div>
				</div>


			</div>


			<!-- content-wrapper ends -->
			<!-- partial:partials/_footer.html -->

			{% include "dashboard/nav_&_sidebar_&_footer/_footer.html.twig" %}

			<!-- partial -->
		</div>
		<!-- main-panel ends -->
	</div>
	<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->{% endblock %}

